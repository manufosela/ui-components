{
  "name": "@manufosela/arc-slider",
  "version": "2.0.0",
  "description": "A customizable arc slider web component with gradient colors, built with Lit",
  "license": "MIT",
  "author": "manufosela",
  "type": "module",
  "main": "src/arc-slider.js",
  "module": "src/arc-slider.js",
  "exports": {
    ".": {
      "import": "./src/arc-slider.js"
    },
    "./arc-slider.js": {
      "import": "./src/arc-slider.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "start": "web-dev-server --node-resolve --open demo/",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "test:coverage": "web-test-runner --coverage",
    "lint": "eslint src test --ext .js",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manufosela/ui-components",
    "directory": "packages/arc-slider"
  },
  "keywords": [
    "web-component",
    "lit",
    "slider",
    "arc",
    "gradient",
    "range",
    "input",
    "ui"
  ],
  "bugs": {
    "url": "https://github.com/manufosela/ui-components/issues"
  },
  "homepage": "https://github.com/manufosela/ui-components/tree/main/packages/arc-slider#readme",
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.19.0",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2"
  }
}
