{
  "name": "@manufosela/rich-select",
  "version": "2.0.1",
  "description": "A customizable rich select dropdown web component with search, keyboard navigation, and extensive styling options, built with Lit",
  "license": "Apache-2.0",
  "author": "manufosela",
  "type": "module",
  "main": "./src/rich-select.js",
  "module": "./src/rich-select.js",
  "types": "./src/rich-select.d.ts",
  "exports": {
    ".": {
      "types": "./src/rich-select.d.ts",
      "import": "./src/rich-select.js"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "start": "web-dev-server --node-resolve --open demo/ --watch",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "test:coverage": "web-test-runner --coverage",
    "build:types": "tsc --declaration --declarationMap --emitDeclarationOnly --allowJs --checkJs --outDir ./src ./src/rich-select.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manufosela/ui-components",
    "directory": "packages/rich-select"
  },
  "keywords": [
    "web-component",
    "lit",
    "select",
    "dropdown",
    "rich-select",
    "search",
    "keyboard-navigation",
    "ui"
  ],
  "homepage": "https://github.com/manufosela/ui-components/tree/main/packages/rich-select#readme",
  "bugs": {
    "url": "https://github.com/manufosela/ui-components/issues"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "customElements": "custom-elements.json"
}
